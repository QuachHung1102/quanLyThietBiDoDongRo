extends ../layouts/layout.pug

block styles
  link(rel="stylesheet" href="/public/stylesheets/style.css")
  link(rel="stylesheet" href="/public/stylesheets/measurement.css")

block content
  .measurement-container
    .controller__title
      h1 Measurement Data
    .measurement__content
      .chart__container 
        .item-1.item 
          canvas#chart1
        .item-2.item
          canvas#chart2
        .item-3.item
          canvas#chart3
        .item-4.item  
          canvas#chart4
        .item-5.item 
          .device-info 
            h3 Device Information
            p Device ID: <span id="deviceId"></span>
            p Device Name: <span id="deviceName"></span>
            p Device Type: <span id="deviceType"></span>
            p Last Checked: <span id="lastChecked"></span>
            div.battery-level
              label(for="battery") Battery Level:
              progress(id="battery" max="100" value="0")
              span(id="batteryPercent") 0%
            .alert-level(id="alertLevelBox")

